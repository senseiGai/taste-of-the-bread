{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true, 
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@scripts/*": ["src/scripts/*"],
			"@shared/*": ["src/shared/*"],
			"@widgets/*": ["src/widgets/*"],
			"@entities/*": ["src/entities/*"],
			"@features/*": ["src/features/*"],
			"@pages/*": ["src/pages/*"],
			"@assets/*": ["src/assets/*"]
		}
	}
}
